<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shanghai.nyushuttle.AddToScheduleActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/scheduleTV1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ff57068c"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="#ffffffff"
        android:paddingLeft="10dp" >
    </TextView>

    <TextView
        android:id="@+id/scheduleTV2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ff57068c"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="#ffffffff"
        android:paddingLeft="10dp" >
    </TextView>

    <TextView
        android:id="@+id/scheduleTV3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ff57068c"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="#ffffffff"
        android:paddingLeft="10dp" >
    </TextView>

    <TextView
        android:id="@+id/scheduleTV4"
        android:text=" - - and I will take it every:"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#d11255"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="#ffffffff"
        android:paddingLeft="10dp" >
    </TextView>

    <CheckBox android:id="@+id/checkbox_mon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_tue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_wed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_thu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thursday"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_fri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturday"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:onClick="onCheckboxClicked"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff57068c"
            android:text="Update Favorite"
            android:textColor="#ffffff"
            android:onClick="updateFav"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#d11255"
            android:text="Remove it"
            android:onClick="removeFav"/>

        </LinearLayout>


</LinearLayout>
